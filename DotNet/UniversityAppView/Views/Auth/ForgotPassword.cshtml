@{
    ViewData["Title"] = "Forgot Password";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-4 text-primary">Forgot Password</h3>
        <div class="form-group mb-3">
            <label class="form-label">Registered Email</label>
            <input type="email" id="email" class="form-control" placeholder="Enter your email" />
        </div>
        <div class="d-grid mb-3">
            <button id="btnSendLink" class="btn btn-primary btn-lg">Send Reset Link</button>
        </div>
        <p id="msg" class="text-center fw-bold mt-2"></p>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $("#btnSendLink").click(function () {
        var email = $("#email").val();
        if (!email) {
            $("#msg").text("Please enter your email").addClass("text-danger");
            return;
        }
        $.ajax({
            url: "https://localhost:7009/api/Auth/forgot-password",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(email),
            success: function () {
                $("#msg").text("Reset link sent! Check your email.").addClass("text-success").removeClass("text-danger");
            },
            error: function () {
                $("#msg").text("Email not found").addClass("text-danger").removeClass("text-success");
            }
        });
    });
</script>
