@{
    ViewData["Title"] = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-4 text-success">📝 Create Account</h3>

        <div class="form-group mb-3">
            <label for="username" class="form-label fw-semibold">Username</label>
            <input type="text" id="username" class="form-control" placeholder="Enter username" required />
        </div>

        <div class="form-group mb-3">
            <label for="email" class="form-label fw-semibold">Email</label>
            <input type="email" id="email" class="form-control" placeholder="Enter email" required />
        </div>

        <div class="form-group mb-3">
            <label for="password" class="form-label fw-semibold">Password</label>
            <input type="password" id="password" class="form-control" placeholder="Enter password" required />
        </div>

        <div class="form-group mb-4">
            <label for="confirmPassword" class="form-label fw-semibold">Confirm Password</label>
            <input type="password" id="confirmPassword" class="form-control" placeholder="Re-enter password" required />
        </div>

        
        <div class="d-grid mb-3">
            <button id="btnRegister" class="btn btn-success btn-lg">
                <i class="bi bi-person-plus"></i> Register
            </button>
        </div>

        <div class="text-center">
            <p class="mb-2">Already have an account?</p>
            <a href="/Auth/Index" class="btn btn-outline-primary btn-sm">Back to Login</a>
        </div>

        <p id="msg" class="mt-3 text-center fw-bold"></p>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $("#btnRegister").click(function () {
        const username = $("#username").val();
        const email = $("#email").val().trim();
        const password = $("#password").val();
        const confirmPassword = $("#confirmPassword").val();

        if (!username || !email || !password || !confirmPassword) {
            $("#msg").text("⚠️ Please fill all fields").addClass("text-danger");
            return;
        }
        const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
        if (!emailRegex.test(email)) {
            $('#msg').text('❌ Enter a valid email address').addClass('text-danger');
            return;
        }

        if (password !== confirmPassword) {
            $("#msg").text("❌ Passwords do not match!").addClass("text-danger");
            return;
        }

        const user = {
            userName: username,
            email: email,
            password: password,
            role: "Student"
        };

        $.ajax({
            url: "https://localhost:7009/api/Auth/register", // ✅ Register API endpoint (you’ll create next)
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(user),
            success: function () {
                $("#msg").text("✅ Registration successful! Redirecting to login...").addClass("text-success").removeClass("text-danger");
                setTimeout(() => window.location.href = "/Auth/Index", 1500);
            },
            error: function () {
                $("#msg").text("❌ Registration failed. Try again.").addClass("text-danger");
            }
        });
    });
</script>
