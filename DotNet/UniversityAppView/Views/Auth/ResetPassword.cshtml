@{
    ViewData["Title"] = "Reset Password";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <h3 class="text-center mb-4 text-primary">Reset Password</h3>
        <div class="form-group mb-3">
            <label class="form-label">New Password</label>
            <input type="password" id="newPassword" class="form-control" placeholder="Enter new password" />
        </div>
        <div class="d-grid mb-3">
            <button id="btnReset" class="btn btn-success btn-lg">Reset Password</button>
        </div>
        <p id="msg" class="text-center fw-bold mt-2"></p>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    const token = new URLSearchParams(window.location.search).get("token");
    $("#btnReset").click(function () {
        var newPassword = $("#newPassword").val();
        $.ajax({
            url: "https://localhost:7009/api/Auth/reset-password",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify({ token: token, newPassword: newPassword }),
            success: function () {
                $("#msg").text("Password reset successful! Redirecting...").addClass("text-success");
                setTimeout(() => window.location.href = "/Auth/Index", 1500);
            },
            error: function () {
                $("#msg").text("Invalid or expired link").addClass("text-danger");
            }
        });
    });
</script>
