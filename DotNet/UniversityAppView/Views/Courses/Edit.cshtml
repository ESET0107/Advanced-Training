@{
    ViewData["Title"] = "Edit Course";
}

<div class="container mt-4">
    <h2>Edit Course</h2>

    <form id="editCourseForm">
        <input type="hidden" id="courseId" />

        <div class="form-group mb-3">
            <label>Course Code</label>
            <input type="text" id="courseCode" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Course Name</label>
            <input type="text" id="courseName" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Department</label>
            <input type="text" id="department" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Semester</label>
            <input type="number" id="semester" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/Courses/Index" class="btn btn-secondary">Cancel</a>

        <p id="msg" class="text-danger mt-3"></p>
    </form>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        var token = localStorage.getItem("jwtToken");
        if (!token) {
            $("#msg").text("Please log in first!");
            return;
        }

        // Extract course ID from URL
        var courseId = window.location.pathname.split("/").pop();

        // ✅ Fetch course by ID
        $.ajax({
            url: "https://localhost:7009/api/Courses/GetCourseById/" + courseId,
            type: "GET",
            headers: { "Authorization": "Bearer " + token },
            success: function (course) {
                $("#courseId").val(course.courseId);
                $("#courseCode").val(course.courseCode);
                $("#courseName").val(course.courseName);
                $("#department").val(course.department);
                $("#semester").val(course.semester);
            },
            error: function () {
                $("#msg").text("Error loading course data.");
            }
        });

        // ✅ Update course
        $("#editCourseForm").submit(function (e) {
            e.preventDefault();

            var updatedCourse = {
                courseId: parseInt($("#courseId").val()),
                courseCode: $("#courseCode").val(),
                courseName: $("#courseName").val(),
                department: $("#department").val(),
                semester: parseInt($("#semester").val())
            };

            $.ajax({
                url: "https://localhost:7009/api/Courses/UpdateCourse/" + updatedCourse.courseId,
                type: "PUT",
                contentType: "application/json",
                headers: { "Authorization": "Bearer " + token },
                data: JSON.stringify(updatedCourse),
                success: function () {
                    alert("Course updated successfully!");
                    window.location.href = "/Courses/Index";
                },
                error: function (xhr) {
                    $("#msg").text("Error updating course: " + xhr.responseText);
                }
            });
        });
    });
</script>
